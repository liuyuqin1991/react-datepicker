{
	"compilerOptions": {
		//是否生成相应的 .map文件。
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "dist",
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@typing": ["src/typing/"],
			"@scss": ["src/scss/"],
			"@asset": ["src/asset/"],
			"@hook": ["src/hook/"],
		}
	},
	//包含
	"include": [
		"./src/**/*",
		"./example/**/*"
	],
	//不包含 
	"exclude": [
		"node_modules"
	]
}