{
	"compilerOptions": {
		//是否生成相应的 .map文件。
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "dist",
		"allowJs": true,
		"baseUrl": "./",
		"moduleResolution": "node",
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		],
		"paths": {
			"Src/*": ["src/*"],
			"Typing": ["src/typing/"],
			"Scss": ["src/scss/"],
			"Asset": ["src/asset/"],
			"Hook": ["src/hook/"],
		}
	},
	//包含
	"include": ["./"],
	//不包含 
	"exclude": ["node_modules", "dist"]
}